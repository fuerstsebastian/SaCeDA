<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project - SaCeDA</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-primary: #0a0e1a;
      --bg-secondary: #121826;
      --bg-tertiary: #1a2332;
      --accent-blue: #4a86e8;
      --accent-cyan: #37a2bd;
      --accent-purple: #8e7cc3;
      --text-primary: #e8eef5;
      --text-secondary: #a0b0c8;
      --text-muted: #6b7a94;
      --border-color: #2a3548;
    }

    body {
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      line-height: 1.6;
    }

    /* Header */
    header {
      background: rgba(18, 24, 38, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border-color);
      padding: 1rem 2rem;
      position: sticky;
      top: 0;
      z-index: 100;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .back-link {
      color: var(--accent-cyan);
      text-decoration: none;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: color 0.2s;
    }

    .back-link:hover {
      color: var(--accent-blue);
    }

    .lang-btn {
      background: linear-gradient(135deg, var(--accent-blue), var(--accent-cyan));
      color: white;
      border: none;
      padding: 0.5rem 1.2rem;
      border-radius: 8px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .lang-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(74, 134, 232, 0.3);
    }

    /* Main Content */
    main {
      max-width: 900px;
      margin: 3rem auto;
      padding: 0 2rem 4rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, var(--accent-purple), var(--accent-cyan));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .team {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .team-member {
      color: var(--accent-cyan);
      text-decoration: none;
      font-size: 0.95rem;
      transition: color 0.2s;
    }

    .team-member:hover {
      color: var(--accent-blue);
      text-decoration: underline;
    }

    .summary {
      font-style: italic;
      color: var(--text-secondary);
      font-size: 1.1rem;
      margin-bottom: 2rem;
      padding-left: 1rem;
      border-left: 3px solid var(--accent-purple);
    }

    .methods {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 2rem;
    }

    .method-tag {
      background: var(--bg-tertiary);
      color: var(--accent-cyan);
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--border-color);
    }

    .images {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      margin-bottom: 3rem;
    }

    .images img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 8px;
      border: 1px solid var(--border-color);
      transition: transform 0.3s;
    }

    .images img:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
    }

    .description {
      color: var(--text-primary);
      margin-bottom: 3rem;
    }

    .description p {
      margin-bottom: 1rem;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section h2 {
      color: var(--accent-blue);
      font-size: 1.5rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid var(--border-color);
    }

    .partners {
      color: var(--text-secondary);
    }

    .publications {
      list-style: none;
    }

    .publications li {
      color: var(--text-secondary);
      margin-bottom: 0.8rem;
      padding-left: 1.5rem;
      position: relative;
    }

    .publications li::before {
      content: 'üìÑ';
      position: absolute;
      left: 0;
    }

    #loading {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--bg-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 4px solid var(--border-color);
      border-top: 4px solid var(--accent-blue);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .hidden {
      display: none;
    }

    @media (max-width: 768px) {
      h1 { font-size: 2rem; }
      main { padding: 0 1rem 3rem; }
      .images { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>
  <div id="loading">
    <div class="loading-spinner"></div>
  </div>

  <header>
    <a href="../index.html" class="back-link">
      ‚Üê <span data-i18n="backToNetwork">Back to Network</span>
    </a>
    <button id="lang-toggle" class="lang-btn">
      <span id="lang-text">DE</span>
    </button>
  </header>

  <main>
    <h1 id="project-title">Project Title</h1>
    
    <div class="team" id="project-team"></div>
    
    <div class="summary" id="project-summary"></div>
    
    <div class="methods" id="project-methods"></div>
    
    <div class="images" id="project-images"></div>
    
    <div class="description" id="project-description"></div>
    
    <div class="section">
      <h2 data-i18n="partnersHeading">Partners</h2>
      <p class="partners" id="project-partners"></p>
    </div>
    
    <div class="section">
      <h2 data-i18n="publicationsHeading">Selected Publications</h2>
      <ul class="publications" id="project-publications"></ul>
    </div>
  </main>

  <script>
    // Translation
    const translations = {
      en: {
        backToNetwork: "Back to Network",
        partnersHeading: "Partners",
        publicationsHeading: "Selected Publications"
      },
      de: {
        backToNetwork: "Zur√ºck zum Netzwerk",
        partnersHeading: "Partner",
        publicationsHeading: "Weiterf√ºhrende Literatur (Auswahl)"
      }
    };

    let currentLang = localStorage.getItem('saceda-lang') || 'en';

    function applyTranslations() {
      document.querySelectorAll('[data-i18n]').forEach(el => {
        const key = el.getAttribute('data-i18n');
        if (translations[currentLang][key]) {
          el.textContent = translations[currentLang][key];
        }
      });
    }

    function toggleLanguage() {
      currentLang = currentLang === 'en' ? 'de' : 'en';
      localStorage.setItem('saceda-lang', currentLang);
      applyTranslations();
      document.getElementById('lang-text').textContent = currentLang === 'en' ? 'DE' : 'EN';
      loadProject(); // Reload project in new language
    }

    // Get project ID from URL
    function getProjectId() {
      const path = window.location.pathname;
      const filename = path.split('/').pop();
      return filename.replace('.html', '');
    }

    // Load and display project
    async function loadProject() {
      try {
        const projectId = getProjectId();
        const response = await fetch('../data/projects.json');
        const data = await response.json();
        
        const project = data.projects.find(p => p.id === projectId);
        
        if (!project) {
          document.querySelector('main').innerHTML = '<h1>Project not found</h1>';
          return;
        }

        // Title
        document.getElementById('project-title').textContent = project.title[currentLang];
        document.title = project.title[currentLang] + ' - SaCeDA';

        // Team
        const teamHtml = project.team.map(member => 
          `<a href="${member.url}" class="team-member" target="_blank">${member.name}</a>`
        ).join(', ');
        document.getElementById('project-team').innerHTML = teamHtml;

        // Summary
        document.getElementById('project-summary').textContent = project.summary[currentLang];

        // Methods
        const methodsHtml = project.methods.map(method => 
          `<span class="method-tag">#${method}</span>`
        ).join('');
        document.getElementById('project-methods').innerHTML = methodsHtml;

        // Images
        const imagesHtml = project.images.map(img => 
          `<img src="../${img}" alt="Project image">`
        ).join('');
        document.getElementById('project-images').innerHTML = imagesHtml;

        // Description
        document.getElementById('project-description').innerHTML = project.description[currentLang];

        // Partners
        document.getElementById('project-partners').textContent = project.partners[currentLang];

        // Publications
        const pubsHtml = project.publications[currentLang].map(pub => 
          `<li>${pub}</li>`
        ).join('');
        document.getElementById('project-publications').innerHTML = pubsHtml;

        // Hide loading
        document.getElementById('loading').classList.add('hidden');

      } catch (error) {
        console.error('Error loading project:', error);
        document.querySelector('main').innerHTML = '<h1>Error loading project</h1>';
        document.getElementById('loading').classList.add('hidden');
      }
    }

    // Initialize
    document.getElementById('lang-toggle').addEventListener('click', toggleLanguage);
    applyTranslations();
    document.getElementById('lang-text').textContent = currentLang === 'en' ? 'DE' : 'EN';
    loadProject();
  </script>
</body>
</html>
